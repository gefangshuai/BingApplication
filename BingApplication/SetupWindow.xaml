<Window x:Class="BingApplication.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" Height="300" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Grid>
        <GroupBox Header="基本设置" HorizontalAlignment="Left" VerticalAlignment="Top" Height="245" Width="292" Margin="10,10,0,0">
            <TextBlock Margin="10,10,10,10" TextWrapping="Wrap">
                <Run>壁纸存储路径：</Run>
                <LineBreak/>
                <InlineUIContainer>
                    <TextBox Width="190" Name="textPath" Margin="0,10,0,0" VerticalAlignment="Center" Height="20"></TextBox>
                </InlineUIContainer>
                <InlineUIContainer>
                    <Button Name="selectPath" Click="selectPath_Click">选择路径</Button>
                </InlineUIContainer>
            </TextBlock>

            
        </GroupBox>

    </Grid>
</Window>
